<div class="row">
    <div class="col-sm-5">
        <h3>Incognito chat for faceless</h3>
        <p>Who say what, who say so, who know, who care... We are incognitors</p>
        <div class="signup-form">
          <%= form_for @user || User.new, url: sessions_path, method: 'post' do |f| %>
            <div class="form-group">
              <%= f.text_field 'email', class: 'form-control', placeholder: 'e-mail' %>
            </div>
            <div class="form-group">
                <%= f.password_field 'password', class: 'form-control', placeholder: 'password' %>
            </div>
            <% if @user && @user.errors.any? %>
              <div class="alert alert-danger" role="alert">
                <ul>
                  <% @user.errors.full_messages.each do |err| %>
                    <li>
                      <strong><%= err %></strong>
                    </li>
                  <% end %>
                </ul>
              </div>
            <% end %>
            <div class="form-group">
                <%= f.submit 'sign in', class: 'btn btn-block btn-incognito-main' %>
            </div>    
          <% end %>
        </div>  
    </div>
    <div class="col-sm-6">
        <%= image_tag image_url('incognito.jpg') %>
    </div>
</div>